pipeline {
    agent any

    stages {
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
        stage('Serve') {
            steps {
                sh 'npx serve -s build -l 3004'
            }
        }
    }
}

